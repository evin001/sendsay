{
  "root": true,
  "extends": ["prettier/react", "plugin:react/recommended", "google"],
  "plugins": ["prettier", "react-hooks", "import"],
  "rules": {
    "prettier/prettier": [
      "error",
      {
        "singleQuote": true,
        "semi": false
      }
    ],
    "object-curly-spacing": ["error", "always"],
    "semi": ["error", "never"],
    "no-unused-vars": "warn",
    "indent": ["error", 2],
    "require-jsdoc": "off",
    "react/prop-types": ["warn", {
      "ignore": ["children"]
    }],
    "react/display-name": "off"
  },
  "ignorePatterns": ["webpack.config.js"],
  "parser": "babel-eslint"
}
